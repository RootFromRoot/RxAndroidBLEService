<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BleActivity">

    <Button
            android:id="@+id/btnReadChar1"
            android:text="Read Char1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/btnNotifyChar2"/>
    <Button
            android:id="@+id/btnNotifyChar2"
            android:text="Notify Char2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/btnReadChar1"
            app:layout_constraintTop_toTopOf="@+id/btnReadChar1" app:layout_constraintEnd_toStartOf="@+id/btnReadChar3"
    />
    <Button
            android:id="@+id/btnReadChar3"
            android:text="Read Char3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/btnNotifyChar2"
            app:layout_constraintTop_toTopOf="@+id/btnReadChar1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"/>

    <Button
            android:id="@+id/btnWriteChar3"
            android:text="Write Char3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/btnNotifyChar2"
            app:layout_constraintTop_toTopOf="@+id/bthWriteChar1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnNotifyChar4"
            android:text="Notify Char4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/btnReadChar1"
            app:layout_constraintTop_toTopOf="@+id/bthWriteChar1" app:layout_constraintEnd_toStartOf="@+id/btnReadChar3"
    />
    <Button
            android:id="@+id/bthWriteChar1"
            android:text="Write Char1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/btnNotifyChar2"/>


    <TextView
            android:id="@+id/tvChar1"
            android:text="Characteristic 1: VALUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tvChar2" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <TextView
            android:id="@+id/tvChar2"
            android:text="Characteristic 2: VALUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tvChar3" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/tvChar3"
            android:text="Characteristic 3: VALUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tvChar4" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/tvChar4"
            android:text="Characteristic 4: VALUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btnNotifyChar2" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

        <EditText
                android:id="@+id/input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:hint="Input values :AA 00 00 00 AA"
                app:layout_constraintTop_toBottomOf="@+id/btnNotifyChar4"/>

</android.support.constraint.ConstraintLayout>